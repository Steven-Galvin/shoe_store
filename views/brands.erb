<h2>Brands</h2>
<div class="row">
  <div class="col-md-6">
    <h5><%= @message %></h5>
    <div class="form-group">
      <form action="/brands" method="post">
        <input name="name" type="text" placeholder="Enter brand name" required>
        <input name="price" type="text" min="0" placeholder="Enter brand price" required>
        <button type="submit" class="btn-primary">Add Brand</button>
      </form>
    </div>
    <% if @brands.any? %>
      <h3>Here are all the brands you've added:</h3>
      <ul>
        <% @brands.each do |brand| %>
        <li><a href="/brands/<%= brand.id %>"><%= brand.name %></a></li>
      <% end %>
      </ul>
    <% else %>
      <p>You haven't added any brands yet.</p>
    <% end %>
  </div>
  <div class="col-md-6">
    <% if @brands.any? %>
      <h3>Select all brands to delete:</h3>
      <form action="/brands/delete" method="post">
        <input type="hidden" name="_method" value="delete">
        <% @brands.each do |brand| %>
          <div class="checkbox">
            <label>
              <input type="checkbox" name="brand_id[]" value="<%= brand.id %>"><%= brand.name %>
            </label>
          </div>
        <% end %>
        <button type="submit" class="btn-danger">DELETE BRAND(S)</button>
      </form>
    <% end %>
  </div>
</div>
