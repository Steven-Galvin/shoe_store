<h3>Brand: <%= @brand.name %> | <%= @brand.final_price %></h3>

<div class="row">
  <div class="col-md-6">
    <% if @brand.stores.any? %>
      <h4>Here are the stores that sell this brand:</h4>
      <ul>
        <% @brand.stores.each do |store| %>
        <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
        <% end %>
      </ul>
      <p>Click <a href="/brands/<%= @brand.id %>/add_stores">here</a> to add more stores.</p>
    <% else %>
      <p>This brand doesn't have any stores selling it yet. Click <a href="/brands/<%= @brand.id %>/add_stores">here</a> to add some.</p>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <form action="/brands/<%= @brand.id %>/update_name" method="post">
        <input type="hidden" name="_method" value="patch">
        <h5><%= @message %></h5>
        <label for="name">Update brand name:</label>
        <br>
        <input name="name" type="text" placeholder="Enter new brand name">
        <button type="submit" class="btn-info">Update Brand</button>
      </form>
    </div>
    <div class="form-group">
      <form action="/brands/<%= @brand.id %>/update_price" method="post">
        <input type="hidden" name="_method" value="patch">
        <h5><%= @message %></h5>
        <label for="name">Update brand price:</label>
        <br>
        <input name="price" type="text" min="0" placeholder="Enter brand price">
        <button type="submit" class="btn-info">Update Brand</button>
      </form>
    </div>
    <br>
    <form action="/brands/<%= @brand.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn-danger">DELETE BRAND</button>
    </form>
  </div>
</div>
