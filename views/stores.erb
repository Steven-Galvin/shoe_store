<h2>Stores</h2>
<div class="row">
  <div class="col-md-6">
    <h5><%= @message %></h5>
    <div class="form-group">
      <form action="/stores" method="post">
        <input name="name" type="text" placeholder="Enter store name" required>
        <button type="submit" class="btn-primary">Add Store</button>
      </form>
    </div>

    <% if @stores.any? %>
      <h3>Here are all the stores you've added:</h3>
      <ul>
        <% @stores.each do |store| %>
        <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
      <% end %>
      </ul>
    <% else %>
      <p>You haven't added any stores yet.</p>
    <% end %>
  </div>
  <div class="col-md-6">
    <% if @stores.any? %>
      <h3>Select all stores to delete:</h3>
      <form action="/stores/delete" method="post">
        <input type="hidden" name="_method" value="delete">
        <% @stores.each do |store| %>
          <div class="checkbox">
            <label>
              <input type="checkbox" name="store_id[]" value="<%= store.id %>"><%= store.name %>
            </label>
          </div>
        <% end %>
        <button type="submit" class="btn-danger">DELETE STORE(S)</button>
      </form>
    <% end %>
  </div>
</div>
